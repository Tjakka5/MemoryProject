<UserControl x:Class="Game.Controls.Card"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200"
             Margin="5">
    <ItemsControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image x:Name="imageBack" Stretch="UniformToFill"/>
        <Image x:Name="imageFront" Stretch="UniformToFill"/>
    </ItemsControl>
</UserControl>
