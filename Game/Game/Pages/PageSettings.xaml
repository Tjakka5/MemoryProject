<Page x:Class="Game.Pages.PageSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Game.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageSettings">

    <Grid>
        <Button x:Name="ButtonTwoPlayers" Content="Two Players" HorizontalAlignment="Left" Margin="167,10,0,0" VerticalAlignment="Top" Width="75" Click="OnButtonTwoPlayersClicked"/>
        <Button x:Name="ButtonThreePLayers" Content="Three Players" HorizontalAlignment="Left" Margin="367,10,0,0" VerticalAlignment="Top" Width="75" Click="OnButtonThreePlayersClicked"/>
        <Button x:Name="ButtonFourPlayers" Content="Four Players" HorizontalAlignment="Left" Margin="566,10,0,0" VerticalAlignment="Top" Width="75" Click="OnButtonFourPlayersClicked"/>

        <StackPanel x:Name="textInputs" Orientation="Horizontal" Height="20" Margin="0 50 0 0" HorizontalAlignment="Center" VerticalAlignment="Top">

        </StackPanel>
        <Button x:Name="buttonPlay" Content="Play" HorizontalAlignment="Left" Margin="367,213,0,0" VerticalAlignment="Top" Width="75" Click="OnButtonPlayClicked"/>
    </Grid>
</Page>
