<UserControl x:Class="Game.Controls.ModalContent.ModalContentPause"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.Controls.ModalContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Vertical">
        <Button x:Name="buttonRestart" Content="Spel Resetten" Margin="100 40 100 40" Click="OnButtonRestartClicked"/>
        <Button x:Name="buttonResume" Content="Spel Hervatten" Margin="100 40 100 40" Click="OnButtonResumeClicked"/>
        <Button x:Name="buttonMenu" Content="Menu" Margin="100 40 100 40" Click="OnButtonMenuClicked"/>
        
       

    </StackPanel>
</UserControl>
