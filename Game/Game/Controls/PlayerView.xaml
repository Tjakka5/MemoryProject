<UserControl x:Class="Game.Controls.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="150">
    <Grid x:Name="grid" Margin="0 0 0 0">
        <Image x:Name="image" Source="pack://application:,,,/Game;component/Resources/Images/modal.png" Stretch="Fill"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="label" Content="Name" Style="{DynamicResource TitleFont}" />
        </StackPanel>
        
    </Grid>
</UserControl>
