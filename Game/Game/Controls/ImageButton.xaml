<UserControl x:Class="Game.Controls.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Game.Controls"
             mc:Ignorable="d" 
             Width="150" Height="49"
             d:DesignHeight="49" d:DesignWidth="150">
    <Grid>
        <Image x:Name="image" Stretch="Fill"/>
        <Label x:Name="label" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{DynamicResource TitleFont}" FontSize="20"/>
    </Grid>
</UserControl>
